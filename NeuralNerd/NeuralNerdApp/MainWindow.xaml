<Window x:Class="NeuralNerdApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeuralNerdApp"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="800" Width="1100"
        Loaded="Window_Loaded">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New" Click="NewMenuItem_Click"/>
                <MenuItem Header="_Open" Click="OpenMenuItem_Click"/>
                <MenuItem Header="_Save as" Click="SaveMenuItem_Click"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="ExitMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="_Learning">
                <MenuItem Header="_Randimize Weights" Click="RandomizeLearning_Click"/>
                <MenuItem Header="_Learn" Click="Learn_Click"/>
            </MenuItem>
        </Menu>
        <local:NetworkPerformanceControl x:Name="networkPerformanceControl"/>
        <local:NetworkCanvas x:Name="networkCanvas"/>
        
    </DockPanel>
</Window>
