<UserControl x:Class="NeuralNerdApp.NetworkPerformanceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NeuralNerdApp"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="300"
             Width="300">
    <StackPanel>


        <GroupBox Header="Status" Height="60">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Name="statusLabel"/>
                <Button Grid.Column="1" x:Name="stopLearningutton" Margin="5,5,5,5" Click="stopLearningutton_Click">Stop</Button>
            </Grid>

            
        </GroupBox>

        <GroupBox Header="Input image">
            <Border BorderThickness="2" Padding="2" Margin="2" BorderBrush="Black">
                <Image x:Name="imageBox" Stretch="UniformToFill" Width="250" Height="250" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
            </Border>
        </GroupBox>

        <GroupBox x:Name="performanceGroup" Header="Performance">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Current cost:"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="currentCostBox" Text="1.000" IsReadOnly="true"/>
                
                <Label Grid.Row="1" Grid.Column="0" Content="Lowest cost:"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="LowestCostBox" Text="1.000" IsReadOnly="true"/>

                <Label Grid.Row="2" Grid.Column="0" Content="Passes per second:"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="passesPerSecBox" Text="13253" IsReadOnly="true"/>

                <Label Grid.Row="3" Grid.Column="0" Content="Pass index:"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="passIndexBox" Text="13253" IsReadOnly="true"/>
            </Grid>
           
        </GroupBox>

    </StackPanel>
</UserControl>
