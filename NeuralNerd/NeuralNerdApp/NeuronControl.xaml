<UserControl x:Class="NeuralNerdApp.NeuronControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NeuralNerdApp"
             mc:Ignorable="d" 
             d:DesignHeight="{x:Static local:NeuronControl.Size}" d:DesignWidth="{x:Static local:NeuronControl.Size}">
    <Grid Width="{x:Static local:NeuronControl.Size}" Height="{x:Static local:NeuronControl.Size}" Background="Transparent">
        <Border 
            x:Name="neuronIcon"
            CornerRadius="30"
            Width="{x:Static local:NeuronControl.Size}"
            Height="{x:Static local:NeuronControl.Size}"
            Padding="0,5,0,0"
            Background="Aquamarine"
            BorderBrush="Black"
            BorderThickness="1">
                <TextBlock 
                    HorizontalAlignment="Center"
                    Text="x.yy" 
                    x:Name="activationLabel"
                    FontSize="11"/>
        </Border>
    </Grid>
</UserControl>
